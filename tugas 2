#include <iostream>
using namespace std;

int main() {
    int totalDetik;
    cout << "Masukkan bilangan >1 (satuan detik): ";
    cin >> totalDetik;

    int hari = totalDetik / 86400; // 1 hari = 86400 detik
    int sisaDetik = totalDetik % 86400;

    int jam = sisaDetik / 3600;
    sisDetik %= 3600;

    int menit = sisaDetik / 60;
    int detik = sisaDetik % 60;

    cout << "nHasil Konversi:\n";
    cout << totalDetik << " detik = "
         << hari << " Hari, "
         << jam << " Jam, "
         << menit << " Menit, "
         << detik << " Detik. " << endl;

    return 0;
}     
